# Database
DATABASE_URL="postgresql://lorinyo:lorinyo_dev_password@localhost:5432/lorinyo_db"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRES_IN=7d

# Encryption (for API keys)
ENCRYPTION_KEY=change_this_to_a_32_character_key

# MinIO (S3-compatible storage)
STORAGE_PROVIDER=minio
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=lorinyo_admin
STORAGE_SECRET_KEY=lorinyo_minio_password
STORAGE_BUCKET=lorinyo-uploads
STORAGE_REGION=us-east-1

# For production, switch to AWS S3
# STORAGE_PROVIDER=s3
# STORAGE_ENDPOINT=
# STORAGE_ACCESS_KEY=your_aws_access_key
# STORAGE_SECRET_KEY=your_aws_secret_key
# STORAGE_BUCKET=your-production-bucket
# STORAGE_REGION=eu-central-1

# Application
PORT=3001
NODE_ENV=development

# CORS
CORS_ORIGINS=http://localhost:3000

# Mock Services (for development without real API credentials)
USE_MOCK_MARKETPLACES=true
USE_MOCK_CARGO=true
